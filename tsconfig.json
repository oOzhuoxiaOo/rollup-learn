{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "strict": true,
        "declaration": true,
        "declarationDir": "dist",
        "outDir": "dist",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
    },
    "include": ["src/*.ts", "main.ts"],
    "exclude": ["node_modules"],
    "baseUrl": ".",
}